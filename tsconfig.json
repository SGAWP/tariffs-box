{
  "compilerOptions": {
    "strict": true,
    "module": "NodeNext",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "#*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/app.js", "server.js", "models", "db", "config"],
  "exclude": ["node_modules", "src/**/*.test.*", "src/**/*.spec.*"]
}